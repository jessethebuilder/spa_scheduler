<div id="calendar_month" class="container">
  <h3 class="text-center">
    <%= link_to '<span class="glyphicon glyphicon-chevron-left"><span>'.html_safe, date: @date.prev_month, :remote => true %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to '<span class="glyphicon glyphicon-chevron-right"><span>'.html_safe, date: @date.next_month, :remote => true %>

    <%= datepicker_icon :today_button => false %>

    <small>
      <%= link_to '(today)', :date => Date.today, 'date-specific' => true %>
    </small>
  </h3>

  <%= calendar(@date) do |d| %>
      <%= d.day %>
  <% end %>
</div>
